<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ContactList.ContactInfo"
             Title="Contact Info">
    <Grid RowDefinitions="Auto, Auto, Auto, Auto, Auto, *" Padding="20">
        <Image Grid.Row="0" x:Name="contactPhoto" HeightRequest="300"/>
        <Label Grid.Row="1" x:Name="lblName" FontSize="40"/>
        <Label Grid.Row="2" x:Name="lblDesc" FontSize="30"/>
        <Label Grid.Row="3"/>
        <Label Grid.Row="4" x:Name="lblPhone" FontSize="18"/>
        <Label Grid.Row="5" x:Name="lblEmail" FontSize="18"/>
    </Grid>
</ContentPage>